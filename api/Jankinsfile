pipeline {
    agent any
    
    stages {
        stage('Check RAM') {
            steps {
	           echo 'check ram details '
                sh 'free -m'    
            }
        }
        stage('Check Disk Space') {
            steps {
	           echo 'check disk details '
                sh 'df -h'    
            }
        }
        stage('os details') {
            steps {
	           echo 'check os details '
                sh 'cat /etc/os-release'    
            }
        }
     }
  }


